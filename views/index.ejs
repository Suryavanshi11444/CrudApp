<%- include('layouts/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>

            <div class="table-responsive mx-4">
                <% if (users.length > 0) { %>  <!-- Check if users array has data -->
                    <table id="datatable" class="table table-striped mx-4 text-center">
                        <br>
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %>  <!-- Corrected loop syntax -->
                                <tr class="align-middle">
                                    <td><%= index + 1 %></td> <!-- Added 1 for readable index -->
                                    <td><img src="<%= row.image %>" width="80" class="img-thumbnail" /></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.phone %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success">
                                            <i class="fas fa-edit fa-lg mx-1"></i>
                                        </a>
                                        <a href="/delete/<%= row._id %>" class="text-danger">
                                            <i class="fas fa-trash fa-lg mx-1"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No users found in the database</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layouts/footer') %>
